<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="mode">
            <enum name="normal" value="0" />
            <enum name="same_level" value="1" />
        </attr>
        <attr name="flingVelocity" format="integer" />
        <attr name="minDistRequestDisallowParent" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircularAvatarUser">
        <attr name="backgroundImage" format="reference" />
        <attr name="paddingVertical" format="dimension" />
        <attr name="paddingHorizontal" format="dimension" />
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingRight" format="dimension" />

        <!--        <attr name="iconPremium" format="reference|string" />-->
        <!--        <attr name="isPremium" format="boolean" />-->
        <!--        <attr name="iconPreColor" format="color" />-->
    </declare-styleable>
</resources>